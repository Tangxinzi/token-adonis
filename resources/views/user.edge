<!DOCTYPE html>
<html lang="zh">
<head>
  <meta charset="UTF-8" />
  <title>网络考试平台</title>
  {{ style('semantic/dist/semantic.min') }}
  {{ style('style') }}
</head>
<body>
  @!component('components.navigator.nav')
  <div class="ui middle aligned center aligned grid" style="margin-top: 8%">
    <div class="six wide column">
      <form class="ui large form" method="post" action="">
        <div class="ui segment">
          <div class="field">
            <div class="ui left icon input">
              <i class="user icon"></i>
              <input type="text" name="username" value="{{ users.user_nicename }}" placeholder="姓名" autocomplete="off" />
            </div>
          </div>
          <div class="field">
            <div class="ui left icon input">
              <i class="mail icon"></i>
              <input type="email" name="email" value="{{ users.user_email }}" placeholder="邮箱" autocomplete="off" />
            </div>
          </div>
          <div class="field">
            <div class="ui left icon input">
              <i class="mobile icon"></i>
              <input type="number" name="phone" value="{{ users.info.phone }}" placeholder="手机号（可选）" autocomplete="off" />
            </div>
          </div>
          <div class="field">
            <div class="ui left icon input">
              <i class="marker icon"></i>
              <input type="text" name="address" value="{{ users.info.address }}" placeholder="居住地址（可选）" autocomplete="off" />
            </div>
          </div>
          <div class="field">
            <div class="ui input">
              <input type="text" name="number" value="{{ users.info.number }}" placeholder="身份证号（可选）" autocomplete="off" />
            </div>
          </div>
          <div class="field">
            <div class="ui upward selection dropdown">
              <input type="hidden" name="gender">
              <i class="dropdown icon"></i>
              <div class="default text">性别</div>
              <div class="menu">
                <div class="item" data-value="1" data-text="男">
                  <i class="male icon"></i>
                  男
                </div>
                <div class="item" data-value="0" data-text="女">
                  <i class="female icon"></i>
                  女
                </div>
              </div>
            </div>
          </div>
          {{ csrfField() }}
          <button type="submit" name="button" class="ui fluid large teal submit button">更新</button>
        </div>
      </form>
    </div>
  </div>
  {{ script('js/jquery/jquery-1.7.1.min') }}
  {{ script('semantic/dist/semantic.min') }}
  <script type="text/javascript">
    $('.dropdown').dropdown('set selected', {{ users.info.gender }})
  </script>
</body>
</html>
